{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "inlineSources": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./src/**/*.test.ts", "node_modules"]
}
